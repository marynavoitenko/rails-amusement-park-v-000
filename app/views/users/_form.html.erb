<%= form_for(user) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :password%>
<%= f.password_field :password %><br>

<%= f.label :height, 'Height (in inches)' %>
<%= f.text_field :height %><br>

<%= f.label :happiness, 'Your Happinness level (1-5 scale)' %>
<%= f.text_field :happiness %><br>

<%= f.label :nausea, 'Your Nauseousness level (1-5 scale)' %>
<%= f.text_field :nausea %><br>

<%= f.label :tickets, 'How many tickets do you have?' %>
<%= f.text_field :tickets %><br>

<%= f.label :admin, 'Admin?' %>
<%= f.check_box :admin %>

<br>
<%= f.submit %>

<% end %>
